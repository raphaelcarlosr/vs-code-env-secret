{
  "name": "env-secret",
  "displayName": "env-secret",
  "description": "Make your env files as secret in repository",
  "version": "0.0.1",
  "publisher": "raphaelcarlosr.dev",
  "engines": {
    "vscode": "^1.56.0"
  },
  "homepage": "https://github.com/raphaelcarlosr/vscode-env-secret/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/raphaelcarlosr/vscode-env-secret.git"
  },
  "bugs": {
    "url": "https://github.com/raphaelcarlosr/vscode-env-secret/issues"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "secret",
    "env",
    "dotenv"
  ],
  "activationEvents": [
    "onCommand:env-secret.helloWorld",
    "onLanguage:env",
    "onLanguage:secret"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "env-secret.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "secret-env",
        "aliases": [
          "Secret Environment Variables",
          "dotenv"
        ],
        "extensions": [
          ".env",
          ".env.sample",
          ".env.example"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "secret-env-hash",
        "aliases": [
          "Hash Secret Environment Variables",
          "dotenv"
        ],
        "extensions": [
          ".secret",
          ".secret.sample",
          ".secret.example"
        ]
      }
    ],
    "grammars": [
      {
        "language": "env",
        "scopeName": "source.env",
        "path": "./syntaxes/env.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "npm run compile && npm run lint",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "crypto-js": "^4.0.0"
  }
}